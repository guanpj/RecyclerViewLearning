<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  防止资源冲突，增加了 flap_ 前缀  -->
    <declare-styleable name="ShimmerFrameLayout">
        <attr name="flap_shimmer_clip_to_children" format="boolean" />
        <attr name="flap_shimmer_colored" format="boolean" />
        <attr name="flap_shimmer_base_color" format="color" />
        <attr name="flap_shimmer_highlight_color" format="color" />
        <attr name="flap_shimmer_base_alpha" format="float" />
        <attr name="flap_shimmer_highlight_alpha" format="float" />
        <attr name="flap_shimmer_auto_start" format="boolean" />
        <attr name="flap_shimmer_duration" format="integer" />
        <attr name="flap_shimmer_repeat_count" format="integer" />
        <attr name="flap_shimmer_repeat_delay" format="integer" />
        <attr name="flap_shimmer_repeat_mode" format="enum">
            <enum name="restart" value="1" />
            <enum name="reverse" value="2" />
        </attr>
        <attr name="flap_shimmer_start_delay" format="integer" />
        <attr name="flap_shimmer_direction" format="enum">
            <enum name="left_to_right" value="0" />
            <enum name="top_to_bottom" value="1" />
            <enum name="right_to_left" value="2" />
            <enum name="bottom_to_top" value="3" />
        </attr>
        <attr name="flap_shimmer_dropoff" format="float" />
        <attr name="flap_shimmer_fixed_width" format="dimension" />
        <attr name="flap_shimmer_fixed_height" format="dimension" />
        <attr name="flap_shimmer_intensity" format="float" />
        <attr name="flap_shimmer_width_ratio" format="float" />
        <attr name="flap_shimmer_height_ratio" format="float" />
        <attr name="flap_shimmer_shape" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
        </attr>
        <attr name="flap_shimmer_tilt" format="float" />
    </declare-styleable>
</resources>
